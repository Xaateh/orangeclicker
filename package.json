{
  "name": "orangeclicker",
  "productName": "orangeclicker",
  "version": "0.0.2",
  "description": "idle clicker game with oranges",
  "main": "src/index.js",
  "build": {
    "appId": "tk.18o4.orangeclicker",
    "productName": "Orange Clicker",
    "copyright": "Copyright Â© 2022 18O4",
    "win": {
      "target": "nsis",
      "icon": "build/orange.ico",
      "publish": [
        "github"
      ]
    },
    "nsis": {
      "oneClick": false,
      "installerIcon": "build/orange.ico",
      "uninstallerIcon": "build/orange.ico",
      "uninstallDisplayName": "Orange Clicker",
      "license": "LICENSE",
      "allowToChangeInstallationDirectory": true
    }
  },
  "scripts": {
    "start": "electron-forge start",
    "publish": "electron-builder --publish \"always\"",
    "lint": "echo \"No linting configured\"",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "release": "electron-builder"
  },
  "keywords": [],
  "author": {
    "name": "18o4",
    "email": "64557095+18O4@users.noreply.github.com"
  },
  "license": "CC BY-SA 3.0",
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "18o4game"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "electron-updater": "^5.0.5"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.63",
    "@electron-forge/maker-deb": "^6.0.0-beta.63",
    "@electron-forge/maker-rpm": "^6.0.0-beta.63",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.63",
    "@electron-forge/maker-zip": "^6.0.0-beta.63",
    "electron": "19.0.9",
    "electron-builder": "^23.1.0"
  }
}
